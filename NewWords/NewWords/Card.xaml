<Window x:Class="NewWords.Card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewWords"
        mc:Ignorable="d"
        Title="Card" Height="450" Width="500">
    <Grid>
        <Button x:Name="word" Content="Word" HorizontalAlignment="Left" Margin="27,120,0,0" VerticalAlignment="Top" Width="436" Height="124" FontFamily="Helvetica" Click="WordButton_Click" FontSize="48"/>
        <Button x:Name="exit" Content="EXIT" HorizontalAlignment="Left" Margin="10,379,0,0" VerticalAlignment="Top" Width="103" Height="30" FontFamily="Helvetica" Click="exit_Click"/>
        <Button x:Name="save" Content="SAVE" HorizontalAlignment="Left" Margin="27,281,0,0" VerticalAlignment="Top" Width="103" Height="30" FontFamily="Helvetica" Click="save_Click"/>
        <Button x:Name="next" Content="NEXT" HorizontalAlignment="Left" Margin="360,281,0,0" VerticalAlignment="Top" Width="103" Height="30" FontFamily="Helvetica" RenderTransformOrigin="1.35,0.467" Click="next_Click" />
        <Button x:Name="subject" Content="SUBJECT" HorizontalAlignment="Left" Margin="110,35,0,0" VerticalAlignment="Top" Width="288" Height="30" FontFamily="Helvetica"/>

    </Grid>
</Window>
